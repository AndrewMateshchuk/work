<?xml version="1.0" ?>
<config>
    <modules>
        <Mojam_Banners>
            <version>0.0.1</version>
        </Mojam_Banners>
    </modules>
    <admin>
        <routers>
            <mojambanners_admin>
                <use>admin</use>
                <args>
                    <module>Mojam_Banners</module>
                    <frontName>mojambanners_admin</frontName>
                </args>
            </mojambanners_admin>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <mojambanners module="mojambanners">
                <title>Banners</title>
                <sort_order>77</sort_order>
                <action>mojambanners_admin/adminhtml_banners</action>
            </mojambanners>
        </menu>
    </adminhtml>
    <frontend>
        <layout>
            <updates>
                <mojambanners>
                    <file>mojam_banners.xml</file>
                </mojambanners>
            </updates>
        </layout>
        <routers>
            <mojambanners>
                <use>standard</use>
                <args>
                    <module>Mojam_Banners</module>
                    <frontName>banners</frontName>
                </args>
            </mojambanners>
        </routers>
    </frontend>
    <global>
        <helpers>
            <mojambanners>
                <class>Mojam_Banners_Helper</class>
            </mojambanners>
        </helpers>
        <blocks>
            <mojambanners>
                <class>Mojam_Banners_Block</class>
            </mojambanners>
        </blocks>
        <models>
            <mojambanners>
                <class>Mojam_Banners_Model</class>
                <resourceModel>mojambanners_resource</resourceModel>
            </mojambanners>
            <mojambanners_resource>
                <class>Mojam_Banners_Model_Resource</class>
                <entities>
                    <table_banners>
                        <table>mojam_banners_entities</table>
                    </table_banners>
                </entities>
            </mojambanners_resource>
        </models>
        <resources>
            <mojambanners_setup>
                <setup>
                    <module>Mojam_Banners</module>
                </setup>
            </mojambanners_setup>
        </resources>
    </global>
</config>